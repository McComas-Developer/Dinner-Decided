<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/secondary">

    <TextView
        android:id="@+id/btn_category"
        android:textSize="20sp"
        android:background="@drawable/txtbx_outline"
        android:text="@string/test_category"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingStart="20dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ani_check"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:lottie_fileName="checkmark2.json"
        app:lottie_loop="false"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/btn_category"
        app:layout_constraintRight_toRightOf="@+id/btn_category"/>

</androidx.constraintlayout.widget.ConstraintLayout>